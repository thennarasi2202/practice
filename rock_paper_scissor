def check_choice(choice):
    if choice not in ("ğŸª¨","ğŸ“ƒ","âœ‚ï¸"):
        print("Invalid Choice")
        return False
    return True    
    
def tie(user,computer):
    if user == computer:
        print("It's a Tie")

