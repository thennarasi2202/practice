import random

def get_user_choice():
    choice = input("Enter choice (🪨/📃/✂️): ")
    return choice

def get_computer_choice():
    computer = random.choice(["🪨","📃","✂️"])
    return computer

def check_choice(choice):
    if choice not in ("🪨","📃","✂️"):
        print("Invalid Choice")
        return False
    return True    
    
def tie(user,computer):
    if user == computer:
        print("It's a Tie")

def rock(user,computer):
    if user == "🪨" and computer == "✂️":
        print("You Win")
    else:
        print("Computer Wins")

def paper(user,computer):
    if user == "📃" and computer == "🪨":
        print("You Win")
    else:
        print("Computer Wins")

def scissor(user,computer):
    if user == "✂️" and computer == "📃":
        print("You Win")
    else:
        print("Computer Wins")

def decision(user,computer):
    if user == computer:
        return tie(user,computer)
    else:
        {"🪨": rock, "📃": paper, "✂️": scissor}[user](user, computer)
    
def game():
    user = get_user_choice()
    if check_choice(user):
        computer = get_computer_choice()
        print("Computer played:",computer)
        decision(user,computer)

def user_choice_to_play():
    ready_to_play = input("Do you want to play (yes/no): ").lower()
    return ready_to_play

def user_choice(user_decision):    
    if user_decision == "no":
        return False
    elif user_decision == "yes":    
        return True 
    else:
        print("Invalid Entry")

def main():
    while True:  
        handle_choice = user_choice(user_choice_to_play())
        if handle_choice: 
            game()
        elif handle_choice is False: 
            print("Thanks for playing!")
            break
        else: 
            continue

main()        
