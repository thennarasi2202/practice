def decision(user,computer):
    if user == computer:
        return tie(user,computer)
    else:
        {"ğŸª¨": rock, "ğŸ“ƒ": paper, "âœ‚ï¸": scissor}[user](user, computer)
    
def game():
    user = get_user_choice()
    if check_choice(user):
        computer = get_computer_choice()
        print("Computer played:",computer)
        decision(user,computer)

def user_choice_to_play():
    ready_to_play = input("Do you want to play (yes/no): ").lower()
    return ready_to_play

def user_choice(user_decision):    
    if user_decision == "no":
        return False
    elif user_decision == "yes":    
        return True 
    else:
        print("Invalid Entry")

def main():
    while True:  
        handle_choice = user_choice(user_choice_to_play())
        if handle_choice: 
            game()
        elif handle_choice is False: 
            print("Thanks for playing!")
            break
        else: 
            continue

main()        
