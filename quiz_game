class Questions:
    def __init__(self,question,options,answer):
        self.question = question
        self.options = options
        self.answer = answer
    
    def is_correct(self,user_answer):
        return self.answer == user_answer

        
class Quiz:
    def __init__(self,question):
       self.question = question
       self.score = 0
       
     
    def runquiz(self):
        for i in self.question:
            print(i.question)
            print(i.options)
            user_answer = input("Your Answer: ").upper()
            while user_answer not in ["A","B","C","D"]:
                print("Invalid Choice, Check Your Choice!")
                user_answer = input("Your Answer: ").upper()
                continue
            if i.is_correct(user_answer):
                print("Correct Answer")
                self.score += 1
            else:
                print("Wrong Answer")
        print(f"Your Score is : {self.score}/{len(self.question)}")

q1 = [Questions("What is the capital of France?", "A) Berlin \nB) Paris \nC) Madrid \nD) Rome", "B"),
      Questions("Which planet is known as the Red Planet?", "A) Earth \nB) Venus \nC) Mars \nD) Jupiter", "C"),
      Questions("Who wrote the national anthem of India?", "A) Rabindranath Tagore \nB) Bankim Chandra Chatterjee \nC) Mahatma Gandhi \nD) Sarojini Naidu", "A"),
      Questions("Which is the largest ocean in the world?", "A) Atlantic Ocean \nB) Indian Ocean \nC) Pacific Ocean \nD) Arctic Ocean", "C"),
      Questions("How many continents are there on Earth?", "A) 5 \nB) 6 \nC) 7 \nD) 8", "C")]
 
quiz = Quiz(q1)
quiz.runquiz()
